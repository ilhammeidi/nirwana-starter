        |
        |
        button.btn.btn-flat.waves-effect.show-lg-up(type="button") Login
        |
        |
        button.btn.waves-effect.primary(type="button") Register
        |
        |
        span.spacer.vertical-divider.show-lg-up
        include ./settings
        +settings("false")
|
|
