  #container_menu &nbsp;
  .container
    .header-content
      nav.nav-menu
        |
        |
        button.btn-icon.waves-effect.sidenav-trigger.show-md-down(
          id="mobile_menu"
          type="button"
        )
          i.material-icons menu
        .logo
          |
          |
          a(href="#home")
            img(
              src=assets + brand.starter.img
              alt="logo"
